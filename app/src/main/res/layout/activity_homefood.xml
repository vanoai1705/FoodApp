<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/foodRow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <androidx.cardview.widget.CardView
        android:id="@+id/imgFoodViewParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15px"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/imgViewHomeFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_image" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txtFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chân gà siêu cay"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imgFoodViewParent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txtFoodSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome"
        app:layout_constraintTop_toBottomOf="@+id/txtFoodName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="12dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>