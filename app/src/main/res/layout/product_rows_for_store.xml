    <androidx.cardview.widget.CardView
        android:id="@+id/imgFoodViewParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="15px"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imgProductRowDe"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/local" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtNameRowDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"

        pp:layout_constraintStart_toEndOf="@+id/imgFoodViewParent"
        pp:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtDesRowDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNameRowDe"
        pp:layout_constraintStart_toEndOf="@+id/imgFoodViewParent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtStoreRowDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Store"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDesRowDe"
        pp:layout_constraintStart_toEndOf="@+id/imgFoodViewParent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>