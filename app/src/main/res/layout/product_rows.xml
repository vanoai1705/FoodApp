    <androidx.cardview.widget.CardView
        android:id="@+id/imgFoodViewParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="15px"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imgProductRow"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/local" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtNameRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@+id/imgFoodViewParent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txtDesRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNameRow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="12dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />
