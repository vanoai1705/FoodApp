    <androidx.appcompat.widget.Toolbar
        android:id="@+id/homeToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/primarycolor"
        tools:ignore="MissingConstraints"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        app:layout_constraintGuide_percent="0.97"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0B0909"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <SearchView
        android:id="@+id/homeSearchView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/homeToolbar"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineLeft"
        app:layout_constraintRight_toLeftOf="@+id/txtPlace"
        app:layout_constraintHorizontal_weight="8"
        android:layout_width="0dp"
        android:layout_height="42dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/noneborderright"
        />
    <TextView
        android:id="@+id/txtPlace"
        android:layout_width="0dp"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/homeToolbar"
        app:layout_constraintLeft_toRightOf="@+id/homeSearchView"
        app:layout_constraintRight_toRightOf="@+id/guidelineRight"
        app:layout_constraintHorizontal_weight="2"
        android:text="HCM City"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="left|center"
        android:textColor="@color/black"
        android:background="@drawable/nonborderleft"
        tools:ignore="MissingConstraints"/>

    <ImageButton
        android:id="@+id/imgSearchBtn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:background="@drawable/border"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/guideline30"
        app:layout_constraintLeft_toLeftOf="@id/guidelineLeft"
        app:layout_constraintRight_toLeftOf="@id/imgDeliveryBtn"
        app:layout_constraintTop_toBottomOf="@id/homeToolbar"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        app:srcCompat="@drawable/imgsearchhomebtn" />

    <ImageButton
        android:id="@+id/imgDeliveryBtn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:background="@drawable/border"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/guideline30"
        app:layout_constraintLeft_toRightOf="@id/imgSearchBtn"
        app:layout_constraintRight_toRightOf="@id/guidelineRight"
        app:layout_constraintTop_toBottomOf="@id/homeToolbar"
        app:srcCompat="@drawable/imgdeliveryhomebtn"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/back_color"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/guideline30"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <GridView
        android:id="@+id/GvProductHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
